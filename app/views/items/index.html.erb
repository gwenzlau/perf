

<h1> "Products" <h1>
<% for item in @items %>
  <div class="product">
    <h3>
    <%= image_tag item.image %>
      <%= link_to (item.name), item %>
    </h3>
    <div class="actions">
      <%= link_to "Add to Cart", line_items_path(:item_id => item), :method => :post %>
    </div>
  </div>
  <% end %>