<h1> Cart#Show </h1>
<%= render :partial => 'items/cart' %>
  <br>
  <% for line_item in @cart.line_items %>
      <%= image_tag line_item.item.image %>
        <%= line_item.item.name %>
        <%= link_to 'Remove', line_item_path(line_item.item, @item), method: :delete, data: {confirm:' Ya sure?'} %>
        <br>
  <% end %>
  
<p>
  <%= link_to "Continue Shopping", root_path %> |
  <%= link_to "Checkout", new_order_path %>
</p>