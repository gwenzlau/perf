<h1> "Shopping Cart" </h1>

<table id="line_items">
  <tr>
    <th>Product</th>
    <th>Qty</th>
  </tr>
  <% for line_item in @cart.line_items %>
    <tr class="<%= cycle :odd, :even %>">
      <td><%= image_tag line_item.item.image %></td>
      <td class="qty"><%= line_item.quantity %></td>
    </tr>
  <% end %>
  <tr>
    <td class="total price" colspan="4">
      Total: (add price field later)
    </td>
  </tr>
</table>

<p>
  <%= link_to "Continue Shopping", items_path %> |
  <%= link_to "Checkout", new_order_path %>
</p>